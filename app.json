{
  "expo": {
    "name": "Соседи+",
    "slug": "sosedi-plus-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6200EE"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6200EE"
      },
      "package": "com.neighborsplus.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "Соседи+",
      "shortName": "Соседи+",
      "description": "Приложение соседской взаимопомощи",
      "lang": "ru",
      "themeColor": "#6200EE",
      "backgroundColor": "#ffffff",
      "display": "standalone",
      "orientation": "portrait",
      "scope": "/",
      "startUrl": "/",
      "preferRelatedApplications": false
    },
    "updates": {
      "enabled": false,
      "checkAutomatically": "NEVER"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}
